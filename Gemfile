source 'https://rubygems.org'

ruby '2.2.0'
gem 'rails', '4.1.4' # rails-api has some incompatibilities with rails 4.2
gem 'rails-api', '~> 0.3.1'

# For versioning our API we will use:
gem 'api-versions', '~> 1.2.0'

# Use sqlite3 as the Active Record database because this is an example app
gem 'sqlite3', '~> 1.3.9'

# To use ActiveModel :has_secure_password
gem 'bcrypt', '~> 3.1.2'

# To use Jbuilder templates for JSON
gem 'jbuilder', '~> 2.1.3'
gem 'jbuilder_cache_multi', '~> 0.0.2'

# Use Puma for the webserver
gem 'puma', '~> 2.9.0'

# For created unique string IDs
gem 'bson', '~> 2.2.4'